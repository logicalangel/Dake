            <div class="col l12 text-right">
                <button class="btn-flat" style="font-size: 2em;margin-top:10px" type="button">X</button>
            </div>
        </div>
        {{/if}}
        <div class="panel panel-default" style="margin-top: 30px;">
            <div class="panel-heading">
                <h4>سبد خرید شما</h4>
            </div>
