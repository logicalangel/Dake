                <div class="container">
                    {{#if session.cart}}
                    <div class="row">
                        <div class="cart-contents-shipping col-md-12 col m12 no-pad-right">
                            {{#ifCond session.shippingCostApplied '===' true}}
                            <div class="text-right">
                                حمل و نقل:
                                <strong>{{currencySymbol config.currencySymbol}}{{formatAmount config.flatShipping}}</strong>
                            </div>
                            {{else}}
                            <div class="text-right">
                                حمل نقل:
                                <strong>رایگان</strong>
                            </div>
                            {{/ifCond}}
                            <div class="text-right">
                                مجموع:
                                <strong>{{formatAmount session.totalCartAmount}}
                                    {{currencySymbol config.currencySymbol}}</strong>
                            </div>
                        </div>
                    </div>
                    {{else}}
                    <div class="row center" style="border: 4px dashed #EEE; padding:10px;">
                        <div class="cart-contents-shipping col s12 no-pad-right">
