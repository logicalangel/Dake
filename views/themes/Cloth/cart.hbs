        <div class="row">
            {{#if session.cart}}
            <div class="col-xs-6 col s6 text-left align-right">
                <button class="btn btn-danger" id="empty-cart" type="button">تخلیه سبد خرید</button>
            </div>
            {{#ifCond page '!=' 'pay'}}
            <div class="text-right align-right col-xs-6 col s6">
                {{#ifCond page '==' 'checkout'}}
                <a href="/pay" class="btn btn-default">پرداخت</a>
