                        </div>-->
                </div>
                {{/each}}
                <div class="row">
                    <div class="cart-contents-shipping col s12 no-pad-right">
                        <ul class="collection">
                            <li class="collection-item">
                                <b>حمل و نقل:</b>
                                {{#ifCond session.shippingCostApplied '===' true}}
                                <strong>{{currencySymbol config.currencySymbol}}{{formatAmount config.flatShipping}}</strong>
                                {{else}}
                                <strong>رایگان</strong>
                                {{/ifCond}}
                            </li>
                            <li class="collection-item"><b> قابل پرداخت:</b>
                                {{formatAmount session.totalCartAmount}} {{currencySymbol config.currencySymbol}}
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="row center" style="border: 4px dashed #EEE; padding:10px;">
                <div class="cart-contents-shipping col s12 no-pad-right">
                    <i class="material-icons" style="font-size: 55px;">close</i><br>
                    <h5>سبد خالی میباشد</h5>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
    <div class="row">
        <div class="col s12 text-right">
            {{#if session.cart}}
            {{#ifCond page '!=' 'pay'}}
            {{#ifCond page '==' 'checkout'}}
            <a href="/pay" class="btn btn-default col right">پرداخت</a>
            {{else}}
            <a href="/checkout" class="btn btn-default col right">بررسی</a>
            {{/ifCond}}
            {{/ifCond}}
            <button class="btn btn-danger col right" id="empty-cart" type="button">تخلیه سبد خرید</button>
            {{/if}}
        </div>
    </div>
