<div class="row">
    <div class="col s12">
        {{#if pageCloseBtn}}
        <div class="row {{checkout}}">
            <div class="col l12 text-right">
                <button class="btn-flat" style="font-size: 2em;margin-top:10px" type="button">X</button>
            </div>
        </div>
        {{/if}}
        <div class="panel panel-default" style="margin-top: 30px;">
            <div class="panel-heading">
                <h5>سبد خرید شما</h5>
            </div>
            {{#if session.cart}}
            <div class="panel-body cart-body">
                {{#each session.cart}}
                <div class="row cart-row">
                    <div class="col s12">

                        <div class="card horizontal">
                            <div class="card-image">
                                {{#if productImage}}
                                <img style="max-width: 125px" src="{{this.productImage}}"
                                    alt="{{this.title}} product image">
                                {{else}}
                                <img style="max-width: 125px" src="/uploads/placeholder.png"
                                    alt="{{this.title}} product image">
                                {{/if}}
                            </div>
                            <div class="card-stacked">
                                <div class="card-content">
                                    <h6 class="header">
                                        <a class="cart-link" href="/product/{{this.link}}">{{this.title}}</a>
                                    </h6>
                                    <span>
                                        {{formatAmount this.totalItemPrice}} {{currencySymbol ../config.currencySymbol}}
                                    </span>
                                </div>
                                <div class="card-action">
                                    <a href="#" class="btn-delete-from-cart" data-id="{{this.productId}}">
                                        حذف
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
