<div class="row">
	<div class="col s12">
		<h2>کاربر جدید</h2>
		<form method="post" id="edit_form" action="/admin/user/insert" data-toggle="validator">
			<div class="input-field col s12">
				<label>نام کاربر *</label>
				<input type="text" name="usersName" value="{{user.usersName}}" required>
			</div>
			<div class="input-field col s12">
				<label>ایمیل کاربر *</label>
				<input type="email" name="userEmail" value="{{user.userEmail}}" required>
			</div>
			<div class="input-field col s12">
				<label>رمز عبور کاربر *</label>
				<input type="password" id="userPassword" name="userPassword" required>
			</div>
			<div class="input-field col s12">
				<label>تاییدیه رمز عبور *</label>
				<input type="password" data-match="#userPassword" name="frm_userPassword_confirm" required>
			</div>
			<div class="input-field col s12">
				<button type="submit" class="btn btn-success">ایجاد</button>
			</div>
	</div>
</div>
{{> partials/menu}}