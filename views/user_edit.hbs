<div class="row">
	<div class="col s12">
		<h2>ویرایش کاربر</h2>
		<form method="post" id="edit_form" action="/admin/user/update" data-toggle="validator">
			<input type="hidden" name="userId" value="{{user._id}}" />
			<div class="input-field col s12">
				<label>نام کاربر</label>
				<input type="text" class="form-control" name="usersName" value="{{user.usersName}}" required>
			</div>
			<div class="input-field col s12">
				<label>ایمیل کاربر</label>
				<input type="text" class="form-control" name="userEmail" value="{{user.userEmail}}" readonly>
			</div>
			<div class="input-field col s12">
				<label>رمز عبور کاربر {{#ifCond session.user '==' user.userEmail}}*{{/ifCond}}</label>
				<input type="password" class="form-control" name="userPassword"
					{{#ifCond session.user '==' user.userEmail}}required{{/ifCond}}>
			</div>
			<div class="input-field col s12">
				<label>تایید رمز عبور {{#ifCond session.user '==' user.userEmail}}*{{/ifCond}}</label>
				<input type="password" data-validation-match-match="userPassword"
					data-validation-match-message="تاییدیه رمز عبور صحیح نمیباشد" class="form-control"
					name="frm_userPassword_confirm" {{#ifCond session.user '==' user.userEmail}}required{{/ifCond}}>
			</div>
			{{#isAnAdmin session.isAdmin}}
			{{#ifCond session.user '!=' user.userEmail}}
			<div class="checkbox">
				<label>
					<input name="user_admin" {{#checkedState user.isAdmin}}{{/checkedState}} type="checkbox"> کاربر مدیر
					است؟
				</label>
			</div>
			{{/ifCond}}
			{{/isAnAdmin}}
			<div class="input-field col s12">
				<button type="submit" class="btn btn-success">به روز رسانی</button>
			</div>
	</div>
</div>
{{> partials/menu}}